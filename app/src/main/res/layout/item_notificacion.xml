<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:layout_marginVertical="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivIconoNotificacion"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_notifications"
            app:tint="?attr/colorPrimary"
            android:layout_marginEnd="12dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTituloNotificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título de la Notificación"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <TextView
                android:id="@+id/tvMensajeNotificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Este es el cuerpo del mensaje de la notificación, puede ser un poco largo."
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvFechaNotificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hace 5m"
            android:textSize="10sp"
            android:layout_gravity="top"
            android:layout_marginStart="8dp"
            android:textColor="@color/text_tertiary"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>