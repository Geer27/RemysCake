<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/admin_light">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person"
                android:layout_gravity="center"
                app:tint="@color/admin_secondary" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvUsuarioNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="María González"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tvUsuarioEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="maria@pasteleria.com"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tvUsuarioRol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendedora"
                android:textSize="12sp"
                android:textColor="@color/seller_primary"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivUsuarioStatus"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/status_online_indicator"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnUsuarioOpciones"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_more_vert"
            android:background="@drawable/circle_button_background"
            android:contentDescription="Opciones"
            app:tint="@color/text_secondary" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
